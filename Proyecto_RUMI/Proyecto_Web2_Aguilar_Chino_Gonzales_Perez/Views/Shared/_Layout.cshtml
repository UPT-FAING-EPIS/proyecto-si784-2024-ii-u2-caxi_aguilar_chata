<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Rumi</title>
	@Styles.Render("~/Content/css/styles.css")
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
	<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
		<a class="navbar-brand" href="/Home/Index">
			<img src="~/Content/Images/Logo/Recurso 1mdpi.png" width="48" height="48" class="d-inline-block align-center" alt="">
			Rumi
		</a>
		<button class="btn btn-link btn-sm order-2 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
		<form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
		</form>
		<ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
				<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
					<li>
						@using (Html.BeginForm("Logout", "Account", FormMethod.Post))
						{
							@Html.AntiForgeryToken()
							<button type="submit" class="dropdown-item">Cerrar Sesión</button>
						}
					</li>
				</ul>
			</li>
		</ul>
	</nav>
	<div id="layoutSidenav">
		<div id="layoutSidenav_nav">
			<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
				<div class="sb-sidenav-menu">
					<div class="nav">
						<div class="sb-sidenav-menu-heading">Inicio</div>
						<a class="nav-link" href="~/Home/Index">
							<div class="sb-nav-link-icon"><i class="fa fa-registered"></i></div>
							Mis Rumis
						</a>
						<a class="nav-link" href="~/Home/ListarTransferencias">
							<div class="sb-nav-link-icon"><i class="fa fa-exchange"></i></div>
							Mis Movimientos
						</a>
						<a class="nav-link" href="~/Transferencia/Transferir">
							<div class="sb-nav-link-icon"><i class="fa fa-paper-plane"></i></div>
							Chantar
						</a>
						<div class="sb-sidenav-menu-heading">Tienda</div>
						<a class="nav-link" href="~/Canje/Index">
							<div class="sb-nav-link-icon"><i class="fa fa-shopping-bag"></i></div>
							Canjear
						</a>
						<a class="nav-link" href="~/Carrito/Index">
							<div class="sb-nav-link-icon"><i class="fa fa-shopping-cart"></i></div>
							Carrito de Compras
						</a>

						@if (Session["Usertype"] != null && (int)Session["Usertype"] != 2)
						{
							<div class="sb-sidenav-menu-heading">Gestión</div>
							if ((int)Session["Usertype"] == 1)
							{
								<a class="nav-link" href="~/User/Index">
									<div class="sb-nav-link-icon"><i class="fa fa-users"></i></div>
									Usuarios
								</a>
								<a class="nav-link" href="~/prueba/index">
									<div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
									Moneda
								</a>
							}
							<a class="nav-link" href="~/Producto/Index">
								<div class="sb-nav-link-icon"><i class="fa fa-shopping-bag"></i></div>
								Productos
							</a>
							<a class="nav-link" href="~/Orden/Index">
								<div class="sb-nav-link-icon"><i class="fa-solid fa-right-left"></i></div>
								Ordenes
							</a>
						}
					</div>
				</div>
				<div class="sb-sidenav-footer">
					<p>Usuario: <span><b>@Session["Username"]</b></span></p>
				</div>
			</nav>
		</div>
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid p-4">
					@RenderBody()
				</div>
			</main>
		</div>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/complementos")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
