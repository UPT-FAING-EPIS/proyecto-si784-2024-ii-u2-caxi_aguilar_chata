@model Proyecto_Web2_Aguilar_Chino_Gonzales_Perez.Models.producto

@{
    ViewBag.Title = "Eliminar Producto";
}

<h2>Eliminar Producto</h2>

<h3>¿Está seguro de querer eliminar este producto?</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Producto", new { id = Model.id_producto }))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>